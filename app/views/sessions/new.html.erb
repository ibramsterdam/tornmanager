<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<%= form_with url: session_path do |form| %>
  <%= form.text_field :api_key, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your Api Key", value: params[:api_key] %><br>
  <%= form.submit "Sign in" %>
<% end %>
